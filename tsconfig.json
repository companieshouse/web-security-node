{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "paths": {
      "app/*": ["./*"],
      "test/*": ["../test/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}